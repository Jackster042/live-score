{
  "name": "live-score",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev:api": "npx kill-port 8000 && tsx watch src/index.ts",
    "dev:ts": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "worker": "node dist/worker.js",
    "worker:dev": "tsx watch src/worker.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:scale": "docker-compose up -d --scale api=2",
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/start-menu.ps1",
    "dev:full": "powershell -ExecutionPolicy Bypass -File scripts/start-dev-env-full.ps1",
    "dev:basic": "powershell -ExecutionPolicy Bypass -File scripts/start-dev-env.ps1",
    "dev:wt": "powershell -ExecutionPolicy Bypass -File scripts/start-with-wt.ps1",
    "redis:monitor": "docker exec -it live-score-redis redis-cli monitor",
    "postgres:logs": "docker logs -f live-score-postgres",
    "docker:stats": "powershell -ExecutionPolicy Bypass -File scripts/docker-stats.ps1",
    "test:load": "powershell -ExecutionPolicy Bypass -File scripts/run-load-test.ps1",
    "test:scaling": "powershell -ExecutionPolicy Bypass -File scripts/test-horizontal-scaling-simple.ps1",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0",
    "@arcjet/node": "^1.0.0",
    "apminsight": "^5.3.0",
    "bullmq": "^5.69.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "ioredis": "^5.9.3",
    "pg": "^8.18.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@faker-js/faker": "^10.3.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "testcontainers": "^11.12.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
